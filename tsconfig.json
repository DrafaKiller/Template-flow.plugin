{
  "compilerOptions": {
    /* Base Options */
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Advanced Options */
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
